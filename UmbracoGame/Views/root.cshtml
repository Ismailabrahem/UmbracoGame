        .carousel-poster {
            width: 100%;
            height: 100%;
        }

        .carousel {
            margin-bottom: 0px !important;
        }

        .movie-card {
            max-height: 300px;
        }

        @@media (max-width: 768px) {
            .movie-card {
                max-height: 100%;
