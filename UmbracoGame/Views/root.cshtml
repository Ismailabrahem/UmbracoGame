        #cookieSettingsBtn {
            position: fixed;
            bottom: 20px;
            left: 20px;
            background-color: #712cf9;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
